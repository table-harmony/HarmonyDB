{
  "name": "minecraft_db",
  "version": "v1.0",
  "collections": [
    {
      "name": "users",
      "spawn_location": {
        "x": 0,
        "y": 0,
        "z": 0
      },
      "schema": {
        "id": {
          "type": "uuid",
          "constraints": {
            "primary_key": true
          }
        },
        "name": {
          "type": "string",
          "constraints": {
            "not_null": true
          }
        },
        "email": {
          "type": "string",
          "constraints": {
            "not_null": true,
            "unique": true
          }
        },
        "created_at": {
          "type": "timestamp",
          "constraints": {
            "default": "CURRENT_TIMESTAMP"
          }
        }
      }
    },
    {
      "name": "orders",
      "spawn_location": {
        "x": 0,
        "y": 0,
        "z": 1
      },
      "schema": {
        "id": {
          "type": "uuid",
          "constraints": {
            "primary_key": true
          }
        },
        "user_id": {
          "type": "uuid",
          "constraints": {
            "foreign_key": {
              "collection": "users",
              "column": "id"
            }
          }
        },
        "total_amount": {
          "type": "decimal",
          "constraints": {
            "not_null": true,
            "default": 0
          }
        },
        "created_at": {
          "type": "timestamp",
          "constraints": {
            "default": "CURRENT_TIMESTAMP"
          }
        }
      }
    }
  ],
  "migrations": []
}
